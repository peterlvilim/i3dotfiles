# key binds
set $mod Mod1
set $windowkey Mod4
set $ctrl Ctrl
# colors
set $yellow   #b58900
set $orange   #cb4b16
set $red  #dc322f
set $magenta  #d33682
set $violet   #6c71c4
set $blue #268bd2
set $cyan #2aa198
set $green    #859900
set $baseA3 #002b36
set $baseA2 #073642
set $baseA1 #586e75
set $baseA0 #657b83
set $baseB0 #839496
set $baseB1 #93a1a1
set $baseB2 #eee8d5
set $baseB3 #fdf6e3
set $custom #001b26

# window and bar font
font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1

# start a terminal
bindsym $mod+Return exec ~/.i3/shell.sh

# kill focused window or container
bindsym $mod+Shift+q kill

# default layout
workspace_layout tabbed

# focus windows
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+a focus parent
bindsym $mod+ctrl+h focus parent focus left
bindsym $mod+ctrl+j focus parent focus down
bindsym $mod+ctrl+k focus parent focus up
bindsym $mod+ctrl+l focus parent focus right
force_focus_wrapping yes

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# split in horizontal orientation
bindsym $mod+g focus parent split h

# split in vertical orientation
bindsym $mod+v focus parent split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# switch to workspace
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9

# move focused contain1er to workspace
bindsym $mod+Shift+1 move container to workspace 1
bindsym $mod+Shift+2 move container to workspace 2
bindsym $mod+Shift+3 move container to workspace 3
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8
bindsym $mod+Shift+9 move container to workspace 9


# i3bar
bar {
	status_command i3status -c ~/.i3/.i3status.conf | /home/pvilim/.i3/wrapper.py
        colors {
            # solarized
            background $baseA2
            statusline $baseB2
            focused_workspace $red $red $baseA3
            active_workspace $orange $orange $baseA3
            inactive_workspace $blue $blue $baseA3
        }
}

# window colors
client.focused $baseA3 $red $baseA3 $red
client.unfocused $baseA3 $blue $baseA3 $blue
client.focused_inactive $baseA3 $orange $baseA3 $orange

# window borders and layout
for_window [title=" - Chromium$"] border none
for_window [title="Spotify Premium - Linux Preview"] border none
for_window [class="Dwb"] focus child, layout tabbed, focus
for_window [] layout tabbed

# application launch hotkeys
bindsym $MOD+SHIFT+g exec --no-startup-id chromium
bindsym $MOD+SHIFT+p exec --no-startup-id zathura
bindsym $MOD+SHIFT+d exec --no-startup-id /home/pvilim/code/qutebrowser/qutebrowser.py
bindsym $MOD+SHIFT+m exec --no-startup-id offlineimap-notify -o -u quiet
bindsym $MOD+SHIFT+x exec ~/.i3/lock.sh

#monitors
workspace 1 output DFP6
workspace 2 output DFP7
workspace 3 output DFP1
workspace 7 output DFP6
workspace 8 output DFP7
workspace 9 output DFP1

# menus
bindsym $windowkey+y exec gitmenu
bindsym $windowkey+p exec passmenu
bindsym $windowkey+o exec openmenu
bindsym $windowkey+i exec windowmenu
bindsym $windowkey+u exec powermenu
bindsym $windowkey+r exec runmenu
bindsym $windowkey+t exec twitchmenu
bindsym $windowkey+n exec netctlmenu
bindsym $windowkey+v exec videomenu

# sound and music controls
bindsym $MOD+Up exec --no-startup-id amixer set Master 5%+
bindsym $MOD+Down exec --no-startup-id amixer set Master 5%-
bindsym $MOD+Left exec --no-startup-id amixer set Master toggle
bindsym $MOD+Right exec --no-startup-id amixer set Master toggle
bindsym $mod+SHIFT+Left exec --no-startup-id mpc prev
bindsym $mod+SHIFT+Up exec --no-startup-id mpc toggle
bindsym $mod+SHIFT+Down exec --no-startup-id mpc toggle
bindsym $mod+SHIFT+Right exec --no-startup-id mpc next

#light
bindsym $windowkey+Up exec --no-startup-id xbacklight -inc 20
bindsym $windowkey+Down exec --no-startup-id xbacklight -dec 20

# startup script
exec ~/.i3/i3start.sh
